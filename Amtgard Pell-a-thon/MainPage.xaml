<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Amtgard_Pell_a_thon.MainPage">

    <StackLayout>        
        <Label Text="Amtgard Pell-a-thon" FontSize="Title" HorizontalTextAlignment="Center" Padding="30,10,30,10"/>
        <Label Text="Set callout interval (Seconds):" FontSize="20" HorizontalTextAlignment="Center" Padding="30,0,30,0"/>
        <Entry x:Name="txtInterval" Placeholder="10" Text="10" ClearButtonVisibility="WhileEditing" Keyboard="Numeric" HorizontalTextAlignment="Center" Margin="90,10,90,10"/>
        <Button x:Name="btnStartStop" Text="Start" Margin="90,10,90,10" Clicked="btnStartStop_Clicked"/>
        <Label Text="Last Callout" FontSize="20" HorizontalTextAlignment="Center" Padding="30,0,30,0"/>
        <Label x:Name="lblLastCallout" Text="" FontSize="20" HorizontalTextAlignment="Center" Padding="30,0,30,0"/>
    </StackLayout>

</ContentPage>
